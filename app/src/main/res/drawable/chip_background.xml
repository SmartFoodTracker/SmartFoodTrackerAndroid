<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/chip_selected"/>
            <padding android:left="@dimen/chip_padding"
                android:top="@dimen/chip_padding"
                android:right="@dimen/chip_padding"
                android:bottom="@dimen/chip_padding"/>
            <corners android:bottomRightRadius="@dimen/chip_radius" android:bottomLeftRadius="@dimen/chip_radius"
                android:topLeftRadius="@dimen/chip_radius" android:topRightRadius="@dimen/chip_radius"/>
        </shape>
    </item>

    <item android:state_selected="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/chip_unselected"/>
            <padding android:left="@dimen/chip_padding"
                android:top="@dimen/chip_padding"
                android:right="@dimen/chip_padding"
                android:bottom="@dimen/chip_padding"/>
            <corners android:bottomRightRadius="@dimen/chip_radius" android:bottomLeftRadius="@dimen/chip_radius"
                android:topLeftRadius="@dimen/chip_radius" android:topRightRadius="@dimen/chip_radius"/>
        </shape>
    </item>
</selector>